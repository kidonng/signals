{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react",
    "jsxFactory": "createElement",
    "jsxFragmentFactory": "Fragment",
    "stripInternal": true,
    "noUnusedLocals": true,
    "paths": {
      "@preact/signals-core": [
        "./packages/core/src/index.ts"
      ],
      "@preact/signals": [
        "./packages/preact/src/index.ts"
      ],
      "@preact/signals-react": [
        "./packages/react/src/index.ts"
      ]
    }
  }
}
